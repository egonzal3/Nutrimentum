<%= search_form_for @q, :class => collapse_search_form, :id => "serving_size_bfps_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :preparation_state_cont, "Preparation state contains" %>
    <%= f.text_field :preparation_state_cont, :class => "form-control", :placeholder => "Preparation state contains" %>
  </div>

  <div class="form-group">
    <%= f.label :household_serving_size_uom_cont, "Household serving size uom contains" %>
    <%= f.text_field :household_serving_size_uom_cont, :class => "form-control", :placeholder => "Household serving size uom contains" %>
  </div>

  <div class="form-group">
    <%= f.label :household_serving_size, "Household serving size" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :household_serving_size_gteq, :class => "form-control", :placeholder => "Household serving size greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :household_serving_size_lteq, :class => "form-control", :placeholder => "Household serving size less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :serving_size_uom_cont, "Serving size uom contains" %>
    <%= f.text_field :serving_size_uom_cont, :class => "form-control", :placeholder => "Serving size uom contains" %>
  </div>

  <div class="form-group">
    <%= f.label :serving_size, "Serving size" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :serving_size_gteq, :class => "form-control", :placeholder => "Serving size greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :serving_size_lteq, :class => "form-control", :placeholder => "Serving size less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :product_long_name_cont, "Bfp long_name contains" %>
    <%= f.text_field :product_long_name_cont, :class => "form-control", :placeholder => "Bfp long_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/serving_size_bfps" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#serving_size_bfps_filters">
  Show filters
</a>
