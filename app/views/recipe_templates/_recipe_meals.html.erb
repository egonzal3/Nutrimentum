<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Meals

    <a data-toggle="collapse" href="#recipe_meals_new_form">
      Add meal
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.meals.each do |meal| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/meals/<%= meal.id %>">
          <%= meal.eater %>
        </a>

        <%if current_users_information == meal.user %>
          <a href="/delete_meal_from_recipe/<%= meal.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_meals_new_form">
        <%= render partial: "recipe_templates/recipe_meals_new_form" %>
      </div>
    </div>

  </ul>
</div>
