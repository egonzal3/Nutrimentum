<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipes1

    <a data-toggle="collapse" href="#regular_food_recipes1_new_form">
      Add recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @regular_food.recipes1.each do |recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/recipes/<%= recipe.id %>">
          <%= recipe.ingredient1 %>
        </a>

        <a href="/delete_recipe_from_ingredie1/<%= recipe.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="regular_food_recipes1_new_form">
        <%= render partial: "regular_food_templates/regular_food_recipes1_new_form" %>
      </div>
    </div>

  </ul>
</div>
