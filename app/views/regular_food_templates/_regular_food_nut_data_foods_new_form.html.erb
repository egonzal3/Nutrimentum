<form action="/create_nut_data_food_from_regular_food" method="post">

  <input type="hidden" name="ndb_no" value="<%= @regular_food.id %>">

  <div class="form-group">
    <label for="nutr_no">
      Nutr no
    </label>

    <%= select_tag(:nutr_no, options_from_collection_for_select(NutDef.all, :id, :units, @nut_data_food.nutr_no), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="nutr_val">
      Nutr val
    </label>

    <input type="text" id="nutr_val" name="nutr_val" class="form-control" value="<%= @nut_data_food.nutr_val %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create nut data food
  </button>
</form>
