<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recip2

    <a data-toggle="collapse" href="#bfp_recip2_new_form">
      Add recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bfp.recip2.each do |recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/recipes/<%= recipe.id %>">
          <%= recipe.ingredient1 %>
        </a>

        <a href="/delete_recipe_from_ingred2/<%= recipe.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bfp_recip2_new_form">
        <%= render partial: "bfp_templates/bfp_recip2_new_form" %>
      </div>
    </div>

  </ul>
</div>
