<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Serving Size Bfps

    <a data-toggle="collapse" href="#bfp_serving_size_bfps_new_form">
      Add serving size bfp
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bfp.serving_size_bfps.each do |serving_size_bfp| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/serving_size_bfps/<%= serving_size_bfp.id %>">
          <%= serving_size_bfp.ndb_no %>
        </a>

        <a href="/delete_serving_size_bfp_from_product/<%= serving_size_bfp.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bfp_serving_size_bfps_new_form">
        <%= render partial: "bfp_templates/bfp_serving_size_bfps_new_form" %>
      </div>
    </div>

  </ul>
</div>
