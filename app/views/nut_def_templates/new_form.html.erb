<h1>
  Add a new nut def
</h1>


<hr>

<form action="/create_nut_def" method="post">

  <div class="form-group">
    <label for="units">
      Units
    </label>

    <input type="text" id="units" name="units" class="form-control">
  </div>

  <div class="form-group">
    <label for="tagname">
      Tagname
    </label>

    <input type="text" id="tagname" name="tagname" class="form-control">
  </div>

  <div class="form-group">
    <label for="nutrdesc">
      Nutrdesc
    </label>

    <textarea id="nutrdesc" name="nutrdesc" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="num_dec">
      Num dec
    </label>

    <input type="text" id="num_dec" name="num_dec" class="form-control">
  </div>

  <div class="form-group">
    <label for="sr_order">
      Sr order
    </label>

    <input type="text" id="sr_order" name="sr_order" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create nut def
  </button>
</form>

<hr>

<a href="/nut_defs">
  Go back
</a>
