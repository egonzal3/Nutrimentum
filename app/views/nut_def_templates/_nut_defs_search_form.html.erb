<%= search_form_for @q, :class => collapse_search_form, :id => "nut_defs_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :units_cont, "Units contains" %>
    <%= f.text_field :units_cont, :class => "form-control", :placeholder => "Units contains" %>
  </div>

  <div class="form-group">
    <%= f.label :sr_order, "Sr order" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :sr_order_gteq, :class => "form-control", :placeholder => "Sr order greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :sr_order_lteq, :class => "form-control", :placeholder => "Sr order less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :num_dec, "Num dec" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :num_dec_gteq, :class => "form-control", :placeholder => "Num dec greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :num_dec_lteq, :class => "form-control", :placeholder => "Num dec less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :nutrdesc_cont, "Nutrdesc contains" %>
    <%= f.text_field :nutrdesc_cont, :class => "form-control", :placeholder => "Nutrdesc contains" %>
  </div>

  <div class="form-group">
    <%= f.label :tagname_cont, "Tagname contains" %>
    <%= f.text_field :tagname_cont, :class => "form-control", :placeholder => "Tagname contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/nut_defs" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#nut_defs_filters">
  Show filters
</a>
