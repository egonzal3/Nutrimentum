<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All nut defs
    </h1>

    <a href="/nut_defs/new" class="btn btn-block btn-outline-secondary">
      Add a new nut def
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "nut_def_templates/nut_defs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Units
        </th>

        <th>
          Tagname
        </th>

        <th>
          Nutrdesc
        </th>

        <th>
          Num dec
        </th>

        <th>
          Sr order
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @nut_defs.each do |nut_def| %>
      <tr>
        <td>
          <%= nut_def.id %>
        </td>

        <td>
          <%= nut_def.units %>
        </td>

        <td>
          <%= nut_def.tagname %>
        </td>

        <td>
          <%= nut_def.nutrdesc %>
        </td>

        <td>
          <%= nut_def.num_dec %>
        </td>

        <td>
          <%= nut_def.sr_order %>
        </td>

        <td>
          <%= time_ago_in_words(nut_def.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(nut_def.updated_at) %> ago
        </td>

        <td>
          <a href="/nut_defs/<%= nut_def.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @nut_defs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
