<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All nut data foods
    </h1>

    <a href="/nut_data_foods/new" class="btn btn-block btn-outline-secondary">
      Add a new nut data food
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "nut_data_food_templates/nut_data_foods_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ndb no
        </th>

        <th>
          Nutr no
        </th>

        <th>
          Nutr val
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @nut_data_foods.each do |nut_data_food| %>
      <tr>
        <td>
          <%= nut_data_food.id %>
        </td>

        <td>
          <% if nut_data_food.product.present? %>
            <a href="/regular_foods/<%= nut_data_food.product.id %>">
              <%= nut_data_food.product.ndb_no %>
            </a>
          <% end %>
        </td>

        <td>
          <% if nut_data_food.nutr_fact.present? %>
            <a href="/nut_defs/<%= nut_data_food.nutr_fact.id %>">
              <%= nut_data_food.nutr_fact.units %>
            </a>
          <% end %>
        </td>

        <td>
          <%= nut_data_food.nutr_val %>
        </td>

        <td>
          <%= time_ago_in_words(nut_data_food.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(nut_data_food.updated_at) %> ago
        </td>

        <td>
          <a href="/nut_data_foods/<%= nut_data_food.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @nut_data_foods, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
