<%= search_form_for @q, :class => collapse_search_form, :id => "nutrients_bfps_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :output_uom_cont, "Output uom contains" %>
    <%= f.text_field :output_uom_cont, :class => "form-control", :placeholder => "Output uom contains" %>
  </div>

  <div class="form-group">
    <%= f.label :output_value, "Output value" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :output_value_gteq, :class => "form-control", :placeholder => "Output value greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :output_value_lteq, :class => "form-control", :placeholder => "Output value less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :derivation_code_cont, "Derivation code contains" %>
    <%= f.text_field :derivation_code_cont, :class => "form-control", :placeholder => "Derivation code contains" %>
  </div>

  <div class="form-group">
    <%= f.label :nutrient_name_cont, "Nutrient name contains" %>
    <%= f.text_field :nutrient_name_cont, :class => "form-control", :placeholder => "Nutrient name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :nutrient_code, "Nutrient code" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :nutrient_code_gteq, :class => "form-control", :placeholder => "Nutrient code greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :nutrient_code_lteq, :class => "form-control", :placeholder => "Nutrient code less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :product_long_name_cont, "Bfp long_name contains" %>
    <%= f.text_field :product_long_name_cont, :class => "form-control", :placeholder => "Bfp long_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/nutrients_bfps" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#nutrients_bfps_filters">
  Show filters
</a>
