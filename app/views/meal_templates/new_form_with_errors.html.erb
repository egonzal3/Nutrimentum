<% if @meal.present? %>
  <% if @meal.errors.any? %>
    <% @meal.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new meal
</h1>


<hr>

<form action="/create_meal" method="post">

  <input type="hidden" name="eater" value="<%= current_users_information.id %>">

  <div class="form-group">
    <label for="food">
      Food
    </label>

    <%= select_tag(:food, options_from_collection_for_select(Recipe.all, :id, :ingredient1, @meal.food), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create meal
  </button>
</form>

<hr>

<a href="/meals">
  Go back
</a>
